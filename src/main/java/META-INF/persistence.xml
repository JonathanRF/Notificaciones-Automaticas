<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="NaNotificacionesFinal" transaction-type="RESOURCE_LOCAL">
	<class>com.nb.nanotificacion.models.core.Model</class>
	<class>com.nb.nanotificacion.models.Notificacion</class>
	<class>com.nb.nanotificacion.models.TiempoNotificacion</class>
	<class>com.nb.nanotificacion.models.Opciones</class>
	<properties>
		    <property name="eclipselink.ddl-generation" value="create-or-extend-tables" />
